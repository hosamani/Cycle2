<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="167dp"
            android:layout_height="103dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@drawable/hhii"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/textview6"
            android:layout_width="153dp"
            android:layout_height="41dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="Snow city"
            />


        <TextView
            android:id="@+id/textView"
            android:layout_width="153dp"
            android:layout_height="47dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/textview6"
            android:layout_alignParentRight="true"
            android:text="Location:Bang"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="167dp"
            android:layout_height="103dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@drawable/dou"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/textview5"
            android:layout_width="153dp"
            android:layout_height="41dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="@string/name_colorfull" />


        <TextView
            android:id="@+id/textView3"
            android:layout_width="153dp"
            android:layout_height="47dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textview5"
            android:text="Location:Banglr" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="167dp"
            android:layout_height="103dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@drawable/hhuu"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/textview10"
            android:layout_width="153dp"
            android:layout_height="41dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="@string/name_colorfull" />


        <TextView
            android:id="@+id/textView11"
            android:layout_width="153dp"
            android:layout_height="47dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textview10"
            android:text="Location:Mysore" />

    </RelativeLayout>
</LinearLayout>